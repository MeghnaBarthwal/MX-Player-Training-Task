<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus">

    <TextView
        android:layout_width="match_parent"
        android:text="About Us "
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:layout_marginTop="20dp"
        android:id="@+id/about"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/about"
        android:id="@+id/card"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:background="@drawable/ceo"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ceo"
            android:layout_height="150dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_marginLeft="200dp"
            android:text="Karan Bedi (CEO)"
            android:textColor="#1F75BA"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_height="100dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Karan Bedi had an inclination for business right from the start. After he graduated from Queens University in Canada with major in finance, he came back to India and started his own business. He explored the market and identified the areas where there was a need."
        android:layout_below="@+id/card"
        android:id="@+id/text1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text1"
        android:id="@+id/card2"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:background="@drawable/coo"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/manager"
            android:layout_height="150dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_marginLeft="200dp"
            android:text="Vivek Jain (COO)"
            android:textColor="#1F75BA"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@id/text2"
            android:layout_height="100dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Vivek Jain works as Chief Strategy Officer at Times Internet. Prior to this he was the Chief Product and Technology Officer at Housing.com.Jain, who started his career as an early member of Texas-based start-up Ashley Laurent, had worked with Motorola Mobility, Amazon and Reliance Jio Infocomm."
        android:layout_below="@+id/card2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"/>




</RelativeLayout>